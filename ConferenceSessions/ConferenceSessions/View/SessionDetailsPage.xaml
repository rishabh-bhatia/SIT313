<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="ConferenceSessions.View.SessionDetailsPage"
             Title="Conference Session Details" BackgroundColor="BlueViolet">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" BackgroundColor="SeaGreen" Spacing="0" Padding="10,2,0,0">
            <StackLayout Padding="8,5,0,0">
                <Label Text="{Binding Session.SessionTitle, StringFormat='\The session title is: {0:N}'}" TextColor="Yellow" Font="22" VerticalOptions="StartAndExpand"/>
                <Label Text="{Binding Session.SessionSpeaker, StringFormat='\The speaker name is: {0:N}'}" TextColor="Yellow" Font="22" VerticalOptions="StartAndExpand"/>
                <Label Text="{Binding Session.SessionDescription, StringFormat='\His/her background: {0:N}'}" TextColor="Yellow" Font="22" VerticalOptions="StartAndExpand"/>
                <Label Text="{Binding Session.IsTechnical, StringFormat='\Is this a technical topic?: {0:N}'}" TextColor="BlanchedAlmond" Font="22" VerticalOptions="StartAndExpand"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
